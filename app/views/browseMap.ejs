<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="css/stylesheet.css">
    </head>
    <body>
        <div id="map-canvas" class="map-canvas"></div>
        <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCYbk1deYkS-RaJV45xOxm2z5TQHA9r6V8"></script>
        <script type="text/javascript" src="js/browseMapScript.js"></script>

        <script>

            function initialize() {
                var userLat = <%= startLat %>;
                var userLng = <%= startLong %>;
                var userLatlng = new google.maps.LatLng(userLat,userLng);
                localMaxZ = 0;

                var styles = [ {
                    stylers: [
                        { hue: "#00ffe6" },
                        { saturation: -20 }
                    ]
                    }, {
                        featureType: "road",
                        elementType: "geometry",
                        stylers: [
                            { lightness: 100 },
                            { visibility: "simplified" }
                        ]
                    },{
                    // featureType: "road",
                        elementType: "labels",
                        stylers: [
                            { visibility: "off" }
                        ]
                    }
                ];

                var styledMap = new google.maps.StyledMapType(styles, {
                    name: "Styled Map"
                });

                var mapOptions = {
                    zoom: 13,
                    center: userLatlng,
                    mapTypeControlOptions: {
                      mapTypeIds: [google.maps.MapTypeId.ROADMAP, 'map_style']
                    },
                    disableDefaultUI: true
                }

                var map = new google.maps.Map(document.getElementById('map-canvas'), mapOptions);

                map.mapTypes.set('map_style', styledMap);
                map.setMapTypeId('map_style');

                var marker = new google.maps.Marker({
                    position: userLatlng,
                    map: map,
                    title: 'Hello World!',
                    icon: 'img/userMark.png'
                });

                <% for( var i in distance ) { %>
                        var locLatlng = new google.maps.LatLng( <%= distance[ i ].lat %>,<%= distance[ i ].long %> );
                        var marker = new google.maps.Marker({
                            position: locLatlng,
                            map: map,
                            icon: 'img/locMark.png'
                        });
                <% } %>
            }

            google.maps.event.addDomListener(window, 'load', initialize);

        </script>

    </body>
</html>
